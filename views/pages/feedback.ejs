<div class="container mt-4">
  <div class="row">
    <div class="col-md-4">
      <div class="maincontent">
        <h1 class="text-center">Send us feedback!</h1>

        <% if(locals.errors) {%>
        <div class="alert alert-danger">
          <ul>
            <% errors.forEach(function (error) {%>
            <li><%= error.msg %></li>
            <%})%>
          </ul>
        </div>
        <%} else if(locals.successMessage) {%>
        <div class="alert alert-success">
          <%= successMessage %>
        </div>
        <%}%>
  
          <form class="feedback-form" method="POST" action="/feedback">
            <div class="mb-3">
              <label for="feedback-form-name">Name</label>
              <input 
                type="text"
                class="form-control"
                id="feedback-form-name"
                placeholder="Enter your name"
                name="name"
                required>
            </div>
            <div class="mb-3">
              <label for="feedback-form-email">E-Mail</label>
              <input 
                type="text"
                class="form-control"
                id="feedback-form-email"
                placeholder="Enter your email address"
                name="email"
                required>
            </div>
            <div class="mb-3">
              <label for="feedback-form-title">Title</label>
              <input 
                type="text"
                class="form-control"
                id="feedback-form-title"
                placeholder="Title of your feedback"
                name="title"
                required>
            </div>
            <div class="mb-3">
              <label for="feedback-form-message">Message</label>
              <textarea 
                rows="6"
                placeholder="Enter your message, then hit the submit button"
                class="form-control"
                id="feedback-form-message"
                name="message"
                required></textarea>
            </div>
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-secondary mb-5">Submit</button>
            </div>
          </form>
        </div>
      </div>
      <aside class="col-md-8">
        <div class="maincontent feedback">
          <h1 class="text-center">Recent Feedback:</h1>
  
          <div class="feedback-items row mb-4">
            <% feedback.forEach(function (item) {%>
        <div class="card col-12 feedback-item item-list media-list">
          <div class="feedback-item media">
            <div class="feedback-info media-body">
              <div class="feedback-head">
                <div class="feedback-title h3"><%=item.title%>
                  <small class="h5 text-muted font-italic">Written by <%=item.name%> (<%=item.email%>)</small>
                </div>
              </div>
              <div class="feedback-message mb-3"><%=item.message%></div>
            </div>
          </div>
        </div>
        <%})%>
      </div>
    </div>
    </aside>
  </div>
</div>